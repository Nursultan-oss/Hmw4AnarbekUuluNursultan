<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gulugulu"
    tools:context=".MainActivity">


        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="                       REGISTER!"
         android:id="@+id/textviewa"
    android:textSize="25sp"
        android:drawableLeft="@drawable/ic_arrow_back"
       app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="textStart"
        android:textColor="@color/white"

         />
    <EditText

        android:id="@+id/edit_text1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/textviewa"
        app:layout_constraintStart_toStartOf="parent"
       android:layout_marginStart="45dp"
        android:text="Username        TRIVIA"
        android:layout_marginTop="150dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:backgroundTint="@color/gulu"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/edit_text1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="45dp"
        android:text="email"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:id="@+id/edit_text2"
        />
   <EditText
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="@id/edit_text2"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="45dp"
    android:text="posword"
    android:layout_marginTop="50dp"
    android:textColor="@color/white"
    android:textSize="20sp"
       tools:ignore="MissingPrefix" />

    <com.google.android.material.button.MaterialButton
        android:layout_marginTop="25dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/white"
        android:text="NEXT"
        android:textColor="@color/black"
        app:cornerRadius="50dp"
        android:paddingHorizontal="5dp"
        android:drawableEnd="@drawable/ic_arrow_forward"
        android:id="@+id/button_1"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:layout_constraintTop_toTopOf="@+id/button_1"
        app:layout_constraintBottom_toBottomOf="@id/text_view2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_account"


        />

    <TextView
          android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRIVIA"
        android:id="@+id/text_view2"
        android:textSize="25sp"
       app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="170dp"
        android:layout_marginBottom="100dp"
        android:textColor="@color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>